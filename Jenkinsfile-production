node {
    stage('Checkout SCM') {
        checkout scm
    }

    stage('Checkout Code') {
        git 'https://github.com/TrinhVPhuong/dash-board.git'
    }

    stages {
        withDockerRegistry(credentialsId: 'bongao-hub', url: 'https://index.docker.io/v1/') {
            stage('Build Image') {
                sh 'docker build -t tvphuong/dashboard-webapp-production:v1 .'
            }
            stage('Push Image') {
                sh 'docker push -t tvphuong/dashboard-webapp-production:v1 .'
            }
        }
    }
}
