node {
    def imageName = "tvphuong/dashboard-webapp-production"
    def dockerImage
    stage("Checkout SCM") {
        checkout scm
    }

    stage("Build Image") {
        dockerImage = docker.build("${imageName}:${env.BUILD_NUMBER}, ${imageName}:latest")
        dockerImage.tag()
    }

    stage("Push Image") {
        docker.withRegistry("https://index.docker.io/v1/", "bongao-hub-credentials") {
            dockerImage.push()
        }
    }

    stage('Cleaning up') {
        sh "docker rmi $imageName:$env.BUILD_NUMBER"
    }
}